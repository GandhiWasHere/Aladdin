@model Aladdin.Models.Cart

@{
    Layout = "~/Views/Shared/mylayout.cshtml";
    ViewData["Title"] = "Mycart";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/cart.css">


<div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        <div class="col-md-8">
            <div class=".p-about mr-2">
                <div class="d-flex flex-row align-items-center">
                    <i class="fa fa-long-arrow-left"></i>
                    <span class="ml-2">Continue Shopping</span>
                </div>
                <hr>
                <h6 class="mb-0">Shopping cart</h6>
                <div class="d-flex justify-content-between">
                    <span>You have 4 items in your cart</span>
                    <div class="d-flex flex-row align-items-center">
                        <span class="text-black-50">Sort by:</span>
                        <div class="price ml-2">
                            <span class="mr-1">price</span>
                            <i class="fa fa-angle-down"></i>
                        </div>
                    </div>
                </div>
                @if (Model != null)
                {
                    @foreach (var item in Model.CartProducts)
                    {
                        <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                            <div class="d-flex flex-row">
                                <img class="rounded" src="/images/@Html.DisplayFor(i => item.ProductImage)" width="40">
                                <div class="ml-2">
                                    <span class="font-weight-bold d-block">@Html.DisplayFor(i => item.ProductName)</span><span class="spec">
                                        @Html.DisplayFor(i => item.ProductColor),
                                        @Html.DisplayFor(i => item.ProductRating)
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center"><span class="d-block">1</span><span class="d-block ml-5 font-weight-bold">ILS @Html.DisplayFor(i => item.ProductPrice)</span><i class="fa fa-trash-o ml-3 text-black-50"></i></div>
                        </div>
                    }
                }
            </div>

        </div>

        <aside class="col-md-4">
            <div class="payment-info">                    
                <form class="needs-validation" novalidate>
                    <section class="shippinp-info">
                        <h4 class="mb-3">Shipping Address</h4>
                        <div class="row g-3">
                            <div class="col-10">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" placeholder="1234 Main St" required>
                                <div class="invalid-feedback">
                                    Please enter your shipping address.
                                </div>
                            </div>

                            <div class="col-md-5">
                                <label for="country" class="form-label">Country</label>
                                <select class="form-select" id="country" required>
                                    <option value="">Choose...</option>
                                    <option>United States</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select a valid country.
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label for="zip" class="form-label">Zip</label>
                                <input type="text" class="form-control" id="zip" placeholder="" required>
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>
                        </div>
                    </section>

                    <hr class="my-4">

                    <section class="optional-choices">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="same-address">
                            <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="save-info">
                            <label class="form-check-label" for="save-info">Save this information for next time</label>
                        </div>
                    </section>

                    <hr class="my-4">

                    <section class="payment-info">
                        <h4 class="mb-3">Payment</h4>
                        <div class="my-3">
                            <div class="form-check">
                                <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked required>
                                <label class="form-check-label" for="credit">Credit card</label>
                            </div>
                            <div class="form-check">
                                <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required>
                                <label class="form-check-label" for="debit">Debit card</label>
                            </div>
                            <div class="form-check">
                                <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required>
                                <label class="form-check-label" for="paypal">PayPal</label>
                            </div>
                        </div>

                        <div class="col-md-8 rm-lr-col-pad tb-pad">
                            <label for="cc-name" class="form-label">Name on card</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="Full name as displayed on card" required>
                            <div class="invalid-feedback">
                                Name on card is required
                            </div>
                        </div>

                        <div class="col-md-8 rm-lr-col-pad tb-pad">
                            <label for="cc-number" class="form-label">Credit card number</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="" required>
                            <div class="invalid-feedback">
                                Credit card number is required
                            </div>
                        </div>

                        <div class="col-md-6 rm-lr-col-pad tb-pad">
                            <label for="cc-expiration" class="form-label">Expiration</label>
                            <input type="month" class="form-control" id="cc-expiration" placeholder="" required>
                            <div class="invalid-feedback">
                                Expiration date required
                            </div>
                        </div>

                        <div class="col-md-3 rm-lr-col-pad tb-pad">
                            <label for="cc-cvv" class="form-label">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                            <div class="invalid-feedback">
                                Security code required
                            </div>
                        </div>
                    </section>

                    <hr class="my-4">

                    <button class="w-100 btn btn-primary btn-lg" type="submit">Hat Away!</button>
                </form>
            </div>
        </aside>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>