                console.log(data);
                //$('#getitem').html(data);
                $("#maindiv").html(data);
            })
        }

        function getDelete(id) {
            $.get('/customers/delete', { "id": id }, function (data, status) {
                console.log("Inside the Async Call");
                console.log(status);
                console.log(data);
                //$('#getitem').html(data);
                $("#maindiv").html(data);
            })
        }



        function getEdit(id) {
            $.get('/customers/edit', { "id": id }, function (data, status) {
                console.log("Inside the Async Call");
                console.log(status);
                console.log(data);
                //$('#getitem').html(data);
                $("#maindiv").html(data);
            })
        }

        function getDetails(id) {
            $.get('/customers/details', { "id": id }, function (data, status) {
                console.log("Inside the Async Call");
                console.log(status);
                console.log(data);
                //$('#getitem').html(data);
                $("#maindiv").html(data);
