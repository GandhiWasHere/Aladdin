@model IEnumerable<Aladdin.Models.Customer>

@{
    Layout = "~/Views/Shared/_LayoutNOHEADERFOOTER.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Customers list</h1>

@section Scripts
{
    <script>
    $('.Details').click(function () {
    var elmId = $(this).attr("id");
    getDetails(elmId);
        console.log("ASDASD");
    });

        $('.Edit').click(function () {
            var elmId = $(this).attr("id");
            getEdit(elmId);
            console.log("ASDASD");
        });

        $('.Delete').click(function () {
            var elmId = $(this).attr("id");
            getDelete(elmId);
            console.log("ASDASD");
        });


        $('.Create').click(function () {
            var elmId = $(this).attr("id");
            getCreate(elmId);
            console.log("ASDASD");
        });




        function getCreate(id) {
            $.get('/customers/Create', {}, function (data, status) {
