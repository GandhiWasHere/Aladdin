@{
    Layout = "~/Views/Shared/mylayout.cshtml";
    ViewData["Title"] = "Aladdin";
    var error_1 = ViewData["Error_1"];
}

<br/>
<br />

<div class="w3-center" >
    <form method="post" >
        <input class="form-control" type="text" name="txtUserName" placeholder="UserName" />
        <input class="form-control" type="password" name="txtPassword" placeholder="Password" />
        <br />
        @if (error_1 != null)
        {
            <span>@error_1</span>
            ViewData["Error_1"] = null;
            <a href="/customers/create">did you signed up?</a>

        }
        <br />
        <input type="submit" value="Sign in" id="btn" class="btn btn-primary">

    </form>
</div>
