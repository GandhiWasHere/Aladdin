@model IEnumerable<Aladdin.Models.Supplier>

@{
    Layout = "~/Views/Shared/_LayoutNOHEADERFOOTER.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Suppliers List</h1>

@section Scripts
{
    <script>
    $('.Details').click(function () {
    var elmId = $(this).attr("id");
    getDetails(elmId);
    });

        $('.Edit').click(function () {
            var elmId = $(this).attr("id");
            getEdit(elmId);
        });

        $('.Delete').click(function () {
            var elmId = $(this).attr("id");
            getDelete(elmId);
        });


        $('.Create').click(function () {
            var elmId = $(this).attr("id");
            getCreate(elmId);
        });




        function getCreate(id) {
            $.get('/Suppliers/Create', {}, function (data, status) {
                $("#maindiv").html(data);
            })
        }

        function getDelete(id) {
            $.get('/Suppliers/delete', { "id": id }, function (data, status) {
                $("#maindiv").html(data);
            })
        }






        function getEdit(id) {
            $.get('/Suppliers/edit', { "id": id }, function (data, status) {
                $("#maindiv").html(data);
            })
        }








        function getDetails(id) {
            $.get('/Suppliers/details', { "id": id }, function (data, status) {
                $("#maindiv").html(data);
            })
        }








    </script>

}
<p>

    <button type="button" id="Create" class="Create btn btn-primary">Create</button>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierPhonNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierPhonNumber)
                </td>
                <td>
                    <button type="button" id="@item.SupplierID" class="Edit btn btn-primary">Edit</button> |
                    <button type="button" id="@item.SupplierID" class="Details btn btn-primary">Details</button> |
                    <button type="button" id="@item.SupplierID" class="Delete btn btn-primary">Delete</button> |
                </td>
            </tr>
        }
    </tbody>
</table>
